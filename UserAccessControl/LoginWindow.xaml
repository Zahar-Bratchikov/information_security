<Window x:Class="UserAccessControl.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="180" Width="320" WindowStartupLocation="CenterScreen">
    <Grid Margin="20,20,20,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Width="200" Margin="0,5"/>
        <Label Content="Password:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" Width="200" Margin="0,5"/>
        <Button Content="Login" Grid.Row="2" Width="100" HorizontalAlignment="Right" Margin="0,10,90,10" Click="BtnLogin_Click" Grid.Column="1"/>
    </Grid>
</Window>