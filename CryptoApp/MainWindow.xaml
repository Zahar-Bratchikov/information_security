<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CryptoApp" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Name="CaesarButton" Content="Caesar Cipher" Width="120" Margin="5" Click="CaesarButton_Click"/>
            <Button Name="VigenereButton" Content="Vigenere Cipher" Width="120" Margin="5" Click="VigenereButton_Click"/>
        </StackPanel>
        <TextBox Name="OutputTextBox" Grid.Row="1" Margin="10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>